local rainbowOutfitTime = 100

rainbowOutfit = macro(rainbowOutfitTime, "Rainbow Outfit", function ()
  rainbowOutfit()
end)

function rainbowOutfit()
    local randomColor = math.random(1, 300 )
    local pOutfit = player:getOutfit()
    local rainbowOutfit = { type = pOutfit.type, head = 114, body = randomColor, legs = 114, feet = 114, addons = pOutfit.addons, mount = pOutfit.mount}
    setOutfit(rainbowOutfit)
  return true
end
